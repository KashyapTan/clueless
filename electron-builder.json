{
    "appId": "com.kashyap-tanuku.xpdite",
    "productName": "Xpdite",
    "copyright": "Copyright Â© 2025 Kashyap Tanuku",
    "files": [
        "dist-electron", 
        "dist-react"
    ],
    "extraResources": [
        {
            "from": "dist-python",
            "to": "python-server",
            "filter": [
                "**/*"
            ]
        }
    ],
    "icon": "./assets/xpdite-logo.jpg",
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["x64"]
            },
            {
                "target": "portable",
                "arch": ["x64"]
            }
        ],
        "icon": "./assets/xpdite-logo.jpg"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    }
}