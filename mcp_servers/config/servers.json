{
    "servers": {
        "demo": {
            "enabled": false,
            "description": "Demo calculator server (add two numbers)",
            "module": "mcp_servers.servers.demo.server"
        },
        "filesystem": {
            "enabled": true,
            "description": "File system tools (read, write, move, rename files)",
            "module": "mcp_servers.servers.filesystem.server"
        },
        "gmail": {
            "enabled": true,
            "description": "Gmail tools (search, read, send, reply, draft, trash, labels)",
            "module": "mcp_servers.servers.gmail.server",
            "requires_google_auth": true,
            "env": {
                "GOOGLE_TOKEN_FILE": "user_data/google/token.json"
            }
        },
        "calendar": {
            "enabled": true,
            "description": "Google Calendar tools (events, scheduling, free/busy)",
            "module": "mcp_servers.servers.calendar.server",
            "requires_google_auth": true,
            "env": {
                "GOOGLE_TOKEN_FILE": "user_data/google/token.json"
            }
        },
        "discord": {
            "enabled": false,
            "description": "Discord tools (send, read messages)",
            "env": {
                "DISCORD_BOT_TOKEN": "your-bot-token-here"
            },
            "module": "mcp_servers.servers.discord.server"
        },
        "canvas": {
            "enabled": false,
            "description": "Canvas LMS tools (assignments, grades, due dates)",
            "env": {
                "CANVAS_URL": "https://your-university.instructure.com",
                "CANVAS_TOKEN": "your-access-token-here"
            },
            "module": "mcp_servers.servers.canvas.server"
        },
        "websearch": {
            "enabled": true,
            "description": "Web search and scraping tools",
            "module": "mcp_servers.servers.websearch.server"
        }
    }
}
